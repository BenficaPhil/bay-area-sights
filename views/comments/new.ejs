<% include ../partials/header %>

<div class="container">
    <h1 class="submit-header">Add New Comment to <%= sight.name %></h1>
    <div class="submit-form">
        <form action="/sights/<%= sight._id %>/comments" method="POST">
            <div class="form-group">
                <textarea class="form-control" type="text" name="comment[text]" id="comment" placeholder="Write your comment here."></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/sights">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>