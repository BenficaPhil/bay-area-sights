<% include ../partials/header %>

<div class="container">
    <h1 class="submit-header">Editing Profile for <%= user.username %></h1>
    <div class="submit-form">
        <form action="/users/<%= user._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="avatar">Avatar</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-picture-o" aria-hidden="true"></i></span>
                    <input class="form-control" type="text" name="user[avatar]" id="avatar" placeholder="Avatar URL" value="<%= user.avatar %>">
                </div>
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-building" aria-hidden="true"></i></span>
                    <input class="form-control" type="text" name="user[city]" id="city" placeholder="City you live in." value="<%= user.city %>">
                </div>
            </div>
            <div class="form-group">
                <label for="favoriteSight">Favorite Sight</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-anchor" aria-hidden="true"></i></span>
                    <input class="form-control" type="text" name="user[favoriteSight]" id="favoriteSight" placeholder="Enter your favorite sightseeing spot." value="<%= user.favoriteSight %>">
                </div>
            </div>
            <div class="form-group">
                <label for="aboutMe">About Me</label>
                <textarea class="form-control" type="text" name="user[aboutMe]" id="aboutMe" placeholder="Write a bit about yourself here." rows="5"><%= user.aboutMe %></textarea>
            </div>
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </form>
    </div>
</div>

<% include ../partials/footer %>